<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/LblEstadoGarra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnSoltar"
        android:text="En Curso"
        android:textSize="36sp" />

    <Button
        android:id="@+id/BtnAgarrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnDerecha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="262dp"
        android:layout_marginTop="127dp"
        android:text="Agarrar" />

    <Button
        android:id="@+id/BtnIzquierda"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnArriba"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="62dp"
        android:text="Izquierda"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnDerecha"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnArriba"
        android:layout_alignParentStart="true"
        android:layout_marginStart="239dp"
        android:layout_marginTop="63dp"
        android:text="Derecha"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnAbajo"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnIzquierda"
        android:layout_alignParentStart="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="51dp"
        android:text="Abajo"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnSoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnAbajo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="30dp"
        android:text="Soltar" />

    <TextView
        android:id="@+id/LblTituloControl"
        android:layout_width="308dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="56dp"
        android:text="Proyecto 1-Grupo 16"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnArriba"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LblTituloControl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="69dp"
        android:text="Arriba"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>